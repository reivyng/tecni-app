# Enrutamiento para SPA (React + Vite)
# Requiere Apache con mod_rewrite habilitado

<IfModule mod_rewrite.c>
  RewriteEngine On

  # Si el archivo o directorio existe, servirlo directamente
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Caso contrario, redirigir todo a index.html
  RewriteRule ^ index.html [L]
</IfModule>

# Opcional: compresión
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json image/svg+xml
</IfModule>

# Cache básico para assets
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 7 days"
  ExpiresByType application/javascript "access plus 7 days"
  ExpiresByType image/svg+xml "access plus 30 days"
  ExpiresByType image/* "access plus 30 days"
</IfModule>
